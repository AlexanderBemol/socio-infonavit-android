        android:id="@+id/shimmer_card1_1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/normal_space"
        app:cardBackgroundColor="@color/gray_shimmer"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/shimmer_card1_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title1"
        app:layout_constraintStart_toEndOf="@id/shimmer_card1_1"
        android:layout_marginTop="@dimen/normal_space"
        app:cardBackgroundColor="@color/gray_shimmer"
        android:layout_marginStart="@dimen/normal_space"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/shimmer_card1_3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title1"
        app:layout_constraintStart_toEndOf="@id/shimmer_card1_2"
        android:layout_marginTop="@dimen/normal_space"
        app:cardBackgroundColor="@color/gray_shimmer"
        android:layout_marginStart="@dimen/normal_space"
        />

    <TextView
        android:id="@+id/shimmer_title2"
