<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/side_nav_header_icon"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/side_nav_header_user_icon"
        android:contentDescription="@string/login_description_logo"
        android:layout_marginTop="@dimen/small_space"
        />
    <ImageView
        android:id="@+id/side_nav_header_user_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_user"
        app:layout_constraintTop_toBottomOf="@id/side_nav_header_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/normal_space"
        android:contentDescription="@string/login_description_logo"
        android:layout_marginBottom="@dimen/normal_space"
        android:layout_marginTop="@dimen/normal_space"
        />
    <TextView
        android:id="@+id/side_nav_header_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/example_mail"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/side_nav_header_user_icon"
        app:layout_constraintTop_toBottomOf="@id/side_nav_header_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/normal_space"
        android:layout_marginStart="@dimen/normal_space"
        android:layout_marginTop="@dimen/normal_space"
        />
</androidx.constraintlayout.widget.ConstraintLayout>